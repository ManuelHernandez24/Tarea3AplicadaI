<Window x:Class="Ejercicio1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejercicio1"
        mc:Ignorable="d"
        Title="Potencia" Height="500" Width="300">
    <Grid>
        
        <StackPanel Margin = "15" Orientation = "Vertical">

            <TextBlock Text = "Numero: " FontSize = "24"/>
            <TextBox Name = "TextBoxNumero"  FontSize = "24"/>
            <TextBlock Text = "Nombre: " FontSize = "24"/>
            <TextBox Name = "TextBoxNombreGuardar"  FontSize = "24"/>
            <Button Content = "Guardar" FontSize = "24" Click = "GuardarButton_Click"/>
            
            <TextBlock Text = "Nombre: " FontSize = "24"/>
            <TextBox Name = "TextBoxNombreBuscar"  FontSize = "24"/>
		    <Button Content = "Buscar" FontSize = "24" Click = "BuscarButton_Click"/>
        
	</StackPanel>
    </Grid>
</Window>

